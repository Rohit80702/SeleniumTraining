package actions;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;

public class Page1 {
    private WebDriver driver;

    private By popupCloseButton = By.id("popup-close-id");  // Replace with actual selector
    private By searchBox = By.id("search-box-id");
    private By searchButton = By.id("search-button-id");

    public Page1(WebDriver driver) {
        this.driver = driver;
    }

    public void closePopup() {
        WebElement closeButton = driver.findElement(popupCloseButton);
        if (closeButton.isDisplayed()) {
            closeButton.click();
        }
    }

    public void searchForRice(String searchText) {
        driver.findElement(searchBox).sendKeys(searchText);
        driver.findElement(searchButton).click();
    }
}
