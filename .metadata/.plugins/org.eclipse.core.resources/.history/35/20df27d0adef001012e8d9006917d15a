		wait.until(ExpectedConditions.visibilityOfElementLocated(By.xpath("//input[@type='text']"))).sendKeys("DEL");
		
		Thread.sleep(2000);
		
		List<WebElement> suggestions = driver.findElements(By.xpath("//div[@id=\"react-autowhatever-1\"]/div[3]/div/div"));
